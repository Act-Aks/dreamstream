{
  "name": "@dreamstream/source",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Act-Aks",
    "url": "https://github.com/Act-Aks/dreamstream"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@biomejs/biome": "2.3.10",
      "axios": "1.13.2",
      "cheerio": "1.1.2",
      "dotenv": "17.2.3",
      "husky": "9.1.7",
      "lint-staged": "16.2.7",
      "tsx": "4.21.0",
      "typescript": "5.9.3",
      "ultracite": "6.5.0",
      "zod": "4.2.1",
      "tsup": "8.5.1"
    },
    "catalogs": {
      "types": {
        "@types/node": "24.10.4",
        "@types/react": "19.2.7"
      }
    }
  },
  "type": "module",
  "scripts": {
    "build:packages": "bun run --filter './packages/*' build",
    "build": "bun run --filter '*' build",
    "cq:check": "bun run --filter '*' cq:check",
    "cq:fix": "bun run --filter '*' cq:fix",
    "cq:types": "bun run --filter '*' cq:types",
    "dev:native": "bun run --filter @dreamstream/native dev",
    "dev:web": "bun run --filter @dreamstream/web dev",
    "dev": "bun run --filter '*' dev",
    "postinstall": "bun run build:packages",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "bun@1.3.5",
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "ultracite": "catalog:",
    "@types/node": "catalog:types",
    "@types/react": "catalog:types"
  }
}
