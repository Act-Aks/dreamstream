{
  "name": "@dreamstream/source",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "17.2.3",
      "zod": "4.2.1",
      "typescript": "5.9.3",
      "@biomejs/biome": "2.3.10",
      "husky": "9.1.7",
      "lint-staged": "16.2.7",
      "ultracite": "6.5.0",
      "tsx": "4.21.0"
    },
    "catalogs": {
      "types": {
        "@types/node": "24.10.4",
        "@types/react": "19.1.10"
      }
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter @dreamstream/native dev",
    "dev:web": "bun run --filter @dreamstream/web dev",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "bun@1.3.5",
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "ultracite": "catalog:"
  }
}
